<!-- notice.xml -->

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.automated.trading.stock.StockManager.stock.notice.NoticeMapper">

    <resultMap id="NoticeResultMap" type="com.automated.trading.stock.StockManager.stock.notice.NoticeDto">
        <id property="id" column="notice_id" />
        <result property="title" column="title" />
        <result property="content" column="content" />
        <result property="postType" column="post_type" />
        <result property="writeDate" column="wrt_dt" />
        <result property="modifyDate" column="mod_dt" />
        <result property="importance" column="imprtnc" />
        <result property="memberId" column="member_id" />
    </resultMap>
    
    <insert id="saveNotice" parameterType="com.automated.trading.stock.StockManager.stock.notice.NoticeDto">
        INSERT INTO stockdb.public.notice (title, content, imprtnc, member_id)
        VALUES (#{title}, #{content}, #{imprtnc}, #{member_id});
    </insert>

    <update id="updateNotice" parameterType="com.automated.trading.stock.StockManager.stock.notice.NoticeDto">
        UPDATE stockdb.public.notice
        SET
        <if test="title != null and title != ''">
            title = #{title},
        </if>
        <if test="content != null and content != ''">
            content = #{content},
        </if>
        <if test="imprtnc != null">
            imprtnc = #{imprtnc},
        </if>
        mod_dt = current_timestamp
        WHERE notice_id = #{notice_id} and member_id = #{member_id};
    </update>

    <delete id="deleteNotice" parameterType="com.automated.trading.stock.StockManager.stock.notice.NoticeDto">
        DELETE FROM stockdb.public.notice
        WHERE notice_id = #{notice_id} and member_id = #{member_id};
    </delete>

</mapper>
